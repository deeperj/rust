@model progressive.Pages_Batches.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Batch[0].BatchCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Batch[0].Term1StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Batch[0].Term2StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Batch[0].MidTerm1Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Batch[0].EndTerm1Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Batch[0].MidTerm2Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Batch[0].EndTerm2Date)

@page
@model progressive.Pages_Students.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.ID" />
            <div class="form-group">
                <label asp-for="Student.GroupID" class="control-label"></label>
                <select asp-for="Student.GroupID" class="form-control" asp-items="ViewBag.GroupID"></select>
                <span asp-validation-for="Student.GroupID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.UniCode" class="control-label"></label>
                <input asp-for="Student.UniCode" class="form-control" />
                <span asp-validation-for="Student.UniCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.SGCode" class="control-label"></label>
                <input asp-for="Student.SGCode" class="form-control" />
                <span asp-validation-for="Student.SGCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.LastName" class="control-label"></label>
                <input asp-for="Student.LastName" class="form-control" />
                <span asp-validation-for="Student.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.OtherNames" class="control-label"></label>
                <input asp-for="Student.OtherNames" class="form-control" />
                <span asp-validation-for="Student.OtherNames" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.StartDate" class="control-label"></label>
                <input asp-for="Student.StartDate" class="form-control" />
                <span asp-validation-for="Student.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

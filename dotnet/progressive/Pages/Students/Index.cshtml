                @Html.DisplayFor(modelItem => item.SGCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtherNames)
            </td>
